  <!-- Color palette, fonts, and back-to-top button styles -->
<style>
  html, body, input, button, textarea, select {
    font-family: 'Times New Roman', Times, serif !important;
  }
  :root {
    --primary: #1e293b;
    --primary-dark: #0f172a;
    --primary-light: #334155;
    --sidebar-bg: linear-gradient(135deg, #0f172a 60%, #1e293b 100%);
    --sidebar-accent: #38bdf8;
    --bg: #181a20;
    --surface: #23263a;
    --surface-alt: #222436;
    --text: #e5e7eb;
    --highlight: #38bdf8;
  }
  .main-header {
    background: var(--primary-dark);
    color: var(--text);
    padding: 0;
    box-shadow: 0 2px 8px rgba(30,41,59,0.18);
    border-bottom: 2px solid var(--primary-light);
    position: sticky;
    top: 0;
    z-index: 100;
    min-height: 48px;
  }
  .main-header .container {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 48px;
    padding: 0 10px;
  }
  .main-header h1 a, .main-header h1 {
    color: var(--sidebar-accent);
    font-size: 1.5rem;
    font-weight: bold;
    letter-spacing: 2px;
    text-shadow: 0 2px 12px #38bdf855;
    margin: 0;
    padding: 10px 0;
    text-align: center;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }
  /* Sidebar Navigation */
  .sidebar-nav {
    position: fixed;
    top: 0; left: -260px;
    width: 260px;
    height: 100vh;
    background: var(--primary-dark);
    color: #fff;
    box-shadow: 2px 0 24px #0005;
    z-index: 1003;
    transition: left 0.3s cubic-bezier(.7,.3,.3,1);
    padding-top: 2.5rem;
    display: flex;
    flex-direction: column;
  }
  .sidebar-nav.open { left: 0; }
  .sidebar-logo-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2.5rem;
    margin-top: 1.2rem;
  }
  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--sidebar-accent);
    letter-spacing: 1px;
  }
  .sidebar-logo-circle a {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  .sidebar-logo-img {
    width:54px;height:54px;margin-left:0.5em;margin-right:0.5em;vertical-align:middle;border-radius:50%;background:#fff;
  }
  .sidebar-close {
    position: absolute;
    top: 18px; right: 18px;
    background: none;
    border: none;
    color: #fff;
    font-size: 1.3rem;
    cursor: pointer;
  }
  .sidebar-nav nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .sidebar-nav nav ul li {
    margin: 1.2rem 0;
  }
  .sidebar-nav nav ul li a {
    color: #fff;
    text-decoration: none;
    font-size: 1.08rem;
    display: flex;
    align-items: center;
    gap: 0.7em;
    padding: 0.5em 1.5em;
    border-radius: 8px 0 0 8px;
    transition: background 0.2s, color 0.2s;
  }
  .sidebar-nav nav ul li a:hover,
  .sidebar-nav nav ul li a.active {
    background: var(--sidebar-accent);
    color: #181a20;
  }
  .sidebar-toggle {
    position: fixed;
    top: 28px;
    left: 28px;
    z-index: 1002;
    background: var(--sidebar-accent);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    box-shadow: 0 2px 12px #38bdf822;
    font-size: 1.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
  }
  .sidebar-toggle:hover { background: var(--primary); }
  @media (max-width: 600px) {
    .sidebar-nav { width: 90vw; }
    .sidebar-toggle { left: 12px; top: 12px; }
  }

  body {
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .container {
    width: 90%;
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Header */
  .main-header {
    background: var(--primary-dark);
    color: var(--text);
