  }

  /* Contact Section */
  .contact-section {
    padding: 3rem 0;
  }
  .contact-form {
    background: var(--surface);
    color: var(--text);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: var(--shadow);
    max-width: 600px;
    margin: 0 auto;
    border: 1.5px solid var(--primary-light);
  }
  .contact-form h3 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--text-light);
  }
  .form-group label {
    color: var(--text-light);
    font-weight: bold;
  }
  .form-group input,
  .form-group textarea,
  .form-group select {
    background: var(--surface-alt);
    color: var(--text);
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 1rem;
    width: 100%;
    padding: 0.75rem;
  }
  .form-group textarea {
    resize: vertical;
    height: 120px;
  }
  .form-group button {
    background: linear-gradient(90deg, var(--sidebar-accent) 0%, var(--primary) 100%);
    color: #fff;
    padding: 0.75rem 2rem;
    border: none;
    border-radius: 40px;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.3s;
  }
  .form-group button:hover {
    background: linear-gradient(90deg, var(--primary-dark) 0%, var(--sidebar-accent) 100%);
    color: #fff;
  }

  /* Calendly Widget */
  .calendly-inline-widget {
    background: var(--surface);
    border-radius: 10px;
    box-shadow: var(--shadow);
    border: 1.5px solid var(--primary-light);
  }

  /* Footer */
  footer {
    margin-top: auto;
    background: var(--primary-dark);
    color: #e5e7eb;
    padding: 1.5rem 0 1rem 0;
    border-top: 1.5px solid #22304a;
    border-radius: 0 0 12px 12px;
    text-align: center;
    box-shadow: 0 -2px 8px #0003;
  }
  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }
  .footer-content p {
    margin: 0;
    font-size: 0.98rem;
    color: #b6e3ff;
  }
  .footer-content .social-icons a {
    color: var(--sidebar-accent);
    margin-left: 1rem;
    font-size: 1.2rem;
    transition: color 0.3s;
    text-decoration: none;
  }
  .footer-content .social-icons a:hover {
    color: #fff;
  }

  /* WhatsApp Float Button */
  .whatsapp-float {
    position: fixed;
    bottom: 25px;
    right: 25px;
    background: #25d366;
    color: #fff;
    border-radius: 50%;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    z-index: 999;
    transition: background 0.3s;
  }
  .whatsapp-float:hover {
    background: #128c7e;
  }

  /* Back to Top Button */
  #backToTop {
    position: fixed;
    bottom: 100px;
    right: 25px;
    background: linear-gradient(90deg, var(--sidebar-accent) 0%, var(--primary) 100%);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: var(--shadow);
    cursor: pointer;
    z-index: 1000;
    transition: background 0.3s, opacity 0.3s;
  }
  #backToTop:hover {
    background: linear-gradient(90deg, var(--primary-dark) 0%, var(--sidebar-accent) 100%);
    opacity: 0.9;
  }

  /* Remove default header styles and light backgrounds */
  .contact-form,
  .calendly-inline-widget {
    background: none;
  }

  @media (max-width: 600px) {
  .container,
  .contact-section {
    width: 98%;
    padding: 0 1vw;
  }
  .contact-form {
    padding: 1rem;
  }
}
</style>
